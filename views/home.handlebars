<div class="p-3">
  <div class="d-flex justify-content-between">
    <h1>Hello {{username}}</h1>
    <div>
      <button id="dashboard" type="submit" class="btn btn-secondary mt-2 mb-5">Dashboard</button>
      <button id="new" type="submit" class="btn btn-primary mt-2 mb-5">New Post</button>
    </div>
  </div>
  <div>
    <h3>All posts</h3>
  </div>

  <ol class="list-group my-3">
    {{#each blogs as |blog|}}
      <a class="nav-link" href="/blog/{{blog.id}}">
        <li class="nav-item list-group-item d-flex align-items-start">
          <div>
            <div class="fw-bold">{{blog.title}}</div>
            <div><em>By: {{blog.author}}</em></div>
            {{blog.createdAt}}
          </div>
        </li>
      </a>
    {{/each}}
  </ol>
  <button id="logout" type="submit" class="btn btn-secondary">Logout</button>
</div>
<script src="/js/home.js"></script>