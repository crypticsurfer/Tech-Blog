<div class="p-3">
  <div class="mb-3 d-flex justify-content-between">
    <a href="/">
      <button id="goBack" type="button" class="btn btn-secondary">Back</button>
    </a>
    <div>
      <a href="/new-blog/{{id}}">
        <button
          id="editButton"
          type="submit"
          class="btn btn-primary"
        >Edit</button>
      </a>
      <button id="delete" type="submit" class="btn btn-primary">Delete</button>
    </div>
  </div>

  <div>
    <h1>{{title}}</h1>
    <h3 class="mb-3">by: {{username}}</h3>
    <p>{{body}}</p>
  </div>

  <h3>Comments:</h3>

  <ol class="list-group list-group-numbered">
    {{#each comments as |comment|}}
      <li
        class="list-group-item d-flex justify-content-between align-items-start"
      >
        <div class="ms-2 me-auto">
          <div class="fw-bold">{{comment.user.dataValues.username}}</div>
          {{comment.dataValues.message}}
        </div>
      </li>
    {{/each}}

  </ol>
</div>

<script src="/js/blog.js" />